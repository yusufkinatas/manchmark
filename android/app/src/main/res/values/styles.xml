<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/secondaryDark</item>
        <item name="android:navigationBarColor">@color/secondaryDark</item>
    </style>

    <style name="AccountKitTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_primary_color">#1db954</item>
        <item name="com_accountkit_primary_text_color">#dfe4ea</item>
        <item name="com_accountkit_secondary_text_color">#b3b3b3</item>
        <item name="com_accountkit_status_bar_color">#212121</item>
        <item name="com_accountkit_background_color">#212121</item>

        <item name="com_accountkit_input_text_color">#dfe4ea</item>
        <item name="com_accountkit_input_background_color">#535353</item>
         <item name="com_accountkit_input_accent_color">#dfe4ea</item>
        <item name="com_accountkit_input_border_color">#121212</item>

        <item name="com_accountkit_button_background_color">#1db954</item>
        <item name="com_accountkit_button_disabled_background_color">#535353</item>
        <item name="com_accountkit_button_disabled_text_color">#dfe4ea</item>

       
        
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor">@color/secondaryDark</item>
        <item name="android:navigationBarColor">@color/secondaryDark</item>
    </style>
</resources>
